# Include documentation and license
include README.md
include LICENSE
include CHANGELOG.md

# Include CLI guide
include social_cli/GUIDE.md

# Include common module
recursive-include common *.py

# Include post modules
recursive-include post-to-bluesky *
recursive-include post-to-facebook *
recursive-include post-to-instagram *
recursive-include post-to-linkedin *
recursive-include post-to-threads *
recursive-include post-to-x *
recursive-include post-to-youtube *

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *~
global-exclude .DS_Store
global-exclude .git*

# Exclude test files
exclude */test_*.py
recursive-exclude * test_*.py

# Exclude GitHub Actions specific files
exclude .github
recursive-exclude .github *

# Exclude post-to-* folders (not needed for CLI package)
recursive-exclude post-to-* *

# Exclude development files
exclude .vscode
recursive-exclude .vscode *
exclude 00-PROMPTS.MD
